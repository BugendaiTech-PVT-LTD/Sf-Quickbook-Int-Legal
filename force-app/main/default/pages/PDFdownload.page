                                <thead style="background: #f3d2d5;">
                                    <tr>
                                        <th colspan="" style="width: 35%;color: #c1202c;text-align: left; font-size: 15px; font-weight: 400;padding-top:2px;padding-bottom:6px;padding-left:10px">ACTIVITY</th>
                                        <th colspan="" style=" color: #c1202c;text-align: center; font-size: 15px; font-weight: 400;padding-top:2px;padding-bottom:6px;">DESCRIPTION</th>
                                        <th style="color: #c1202c;text-align: right; font-size: 15px; font-weight: 400;padding-top:2%;padding-bottom:4%;padding-right:10px">AMOUNT</th>
                                    </tr>
                                    
                                </thead>
                                <tbody>   
                                 
                                   <!-- <td colspan="4"><img style="z-index:99;" src="{!$Resource.Void}">-->
                                 
                                    <apex:repeat value="{!subWrapperObj}" var="lineItem">
                                        <tr>
                                            <td colspan="" style="padding-bottom:0"><strong><!--{!record.Product_Service__c}-->{!lineItem.productService}</strong></td>                            
                                            <td colspan="" style="padding-bottom:0;text-align: center;word-wrap: break-word;word-break: break-all;"><!--{!record.Product_Service__c}-->{!lineItem.Description}</td>                            

                                            <td style="text-align:right; padding-bottom:0">
                                                <span><apex:outputpanel rendered="{!IF(AND(lineItem.productService == 'Commissions',lineItem.lineamount > 0), TRUE, FALSE)}">-</apex:outputpanel>
                                                      <apex:outputText value="{0, number, 0.00}"><apex:param value="{!lineItem.lineamount}" /></apex:outputText>
                                                </span>
                                            </td>
                                        </tr> 
                                    </apex:repeat>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3"><div style="border-top: dashed 3px #ccc;"></div></td>
                                    </tr>
                                    <tr>
                                        <td><small>Please make checks payable to <br/> BOLD LEGAL DEFENSE INSURANCE, INC</small></td>
                                        <td>BALANCE DUE </td>                
                                        <td class="total" style="font-size: 20px;font-weight: 600; text-align: right;">
                                            <apex:outputText value="${0,number,###,###,##0.00}"><apex:param value="{!totalGrossAmount}" /></apex:outputText>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                               </apex:outputPanel>
                        </td>    
                        
                </tr>
           
                    <tr>
                        <td style="padding-top: 0">
                            <table style="width:100%">
                                <tr>
                                    <td style="padding-top: 0">
                                        <small>
                                            2385 NW Executive Center Drive <br/> Suite 100 <br/> Boca Raton, FL 33431-8579 <br/> (561) 988-1600
                                            
                                        </small>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
