<apex:page controller="Getpdfdata" renderAs="pdf" showHeader="false" cache="true" readOnly="true">
    <html>
        <head>
            <meta charset="utf-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1"/>
            <title>PDF</title>
            <style type="text/css">
                *{margin: 0;padding: 0;}
